<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="collector" type="com.miso.vinilosapp.models.Collector"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#343F4B"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCollectorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{collector.name}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#F8FFFFFF" />

                <TextView
                    android:id="@+id/tvCollectorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{collector.email}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#E9361E" />

                <TextView
                    android:id="@+id/tvCollectorTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{collector.telephone}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#E9361E" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>