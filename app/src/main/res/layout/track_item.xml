<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="track" type="com.miso.vinilosapp.models.Track"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="#343F4B"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textTrackName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{track.name}"
            android:hint="fragmento track album" />
        <TextView
            android:id="@+id/textTrackDuration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{track.duration}"
            android:hint="Duration" />
    </LinearLayout>
</layout>