<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="album" type="com.miso.vinilosapp.models.Album"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="#343F4B"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textTrackName"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:hint="fragmento track album"
                android:text="@{album.name}"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textTrackDuration"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="Duration"
                android:text="@{album.releaseDate}"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>